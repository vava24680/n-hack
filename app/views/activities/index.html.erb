<% if current_admin %>
    <%= link_to('登出', destroy_admin_session_path, :method => :delete) %>
    <%= link_to "開團", new_activity_path,:method=>:get %>
<% else %>
    <%= link_to "Log in", new_admin_session_url %>
    <%= link_to "Sign up", new_admin_registration_url %>
<% end %>
<% @activities.each do |activity| %>
    <div>
    <%= Shop.find_by(:id=>activity.shop_id).name %>
    <%= activity.cur_quantity %>
    <%= activity.est_quantity %>
    <br/>
    -------------------------------
    
    <%= activity.created_at.month %>
    <%= activity.created_at.day %>
    -------------------------------
    <br/>
    cuttime month and day
    <%= activity.cuttime.month %>
    <%= activity.cuttime.day %>
    -------------------------------
    <%= link_to "++", new_order_url(:activity=>activity.id),:method=>:get %>
    </div>
<% end %>
